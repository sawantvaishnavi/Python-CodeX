print('==================\n')
print('Area Calculator\n')
print('==================\n')

print ('1)Tirangle')
print('2) Rectangle')
print('3) Square')
print('4) Circle')
print('5) Quit\n')
shape = int(input('which shape: '))

if shape == 1:
    base = float(input('base:  '))
    height = float(input('height: '))
    area= (base * height)/2
    print(f'area is = {area}' )
elif shape == 2:
    base = float(input('base:  '))
    height = float(input('height: '))
    area= base * height
    print(f'area is = {area}' )
elif shape ==3:
    side = float(input('side: '))
    area = side * side
    print(f'area is = {area}')
elif shape == 4:
    radius = float(input('radius: '))
    area = 3.13 * radius * radius
    print(f'area is = {area}')    
else:
    print('Quit')    
